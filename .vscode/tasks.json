{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build libtbx",
            "type": "shell",
            "command": "~/gccsdk/env/ro-make bin install",
            "group":{
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher":"$gcc"
        },
        {
            "label": "Copy to app",
            "type": "shell",
            "command": "~/gccsdk/env/ro-make copytoapp",
            "group":{
                "kind": "build"
            },
            "problemMatcher":"$gcc"
        },
        {
            "label": "Copy to RPCEMU",
            "type": "shell",
            "command": "./copytorpcemu.sh",
            "problemMatcher": []
        }
    ]
}
